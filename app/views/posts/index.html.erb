<section class="container">
<article class="users-article">
<div class="photo"><%= @user.photo %></div>
<div class="details">
 <h2><%= @user.name %></h2>
  <p>Number of posts: <%= @user.posts_counter %></p>
</div>
</article>
   <% @posts.each do |post| %>
        <%= render partial: "post_card", locals: { post: post, comments: post.recent_comments } %>
    <% end %>
</section>
