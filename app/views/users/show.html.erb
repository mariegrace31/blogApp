<section class="container">

<article class="user-article">
<div class="user-photo"><%= @user.photo %></div>
<div class="details">
<h2><%= @user.name %></h2>
<p><%= link_to "Number of posts:", user_posts_url(@user.id) %> <%= @user.posts_counter %></p>
</div>
</article>
<div class="bio">
  <p>Bio</p>
  <p><%= @user.bio %></p>
</div>
<% if @user.recent_posts.any? %>
<% @user.recent_posts.each do |post| %>
<div class="post-details">
  <h2><%= link_to "Post #", user_post_url(@user.id, post.id) %><%= post.id %></h2>
  <h3><%= post.text %></h3>
  <p>Comments:<%= post.comments_counter %>, Likes:<%= post.likes_counter %></p>
</div>
<% end %>
<%= link_to user_posts_path(@user.id) do %>
<% end %>
<button type="button" class="see-posts">See all posts</button>
<% else %>
<p>No posts found.</p>
<% end %>
</section>
